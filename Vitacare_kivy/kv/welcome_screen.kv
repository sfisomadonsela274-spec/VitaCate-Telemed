<WelcomeScreen>:
    name: 'welcome'
    
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.1, 0.5, 0.8, 0.1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(30)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.25
            spacing: dp(20)

            FloatLayout:
                size_hint_y: 0.8
                
                Image:
                    source: "assets/vitacare_logo.png"
                    size_hint: None, None
                    size: 200, 200  # Adjust size as needed
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "VitaCare"
                theme_text_color: "Custom"
                text_color: 0.1, 0.3, 0.6, 1
                font_style: "H2"
                bold: True
                halign: "center"
                size_hint_y: 0.2

            MDLabel:
                text: "Your Health, Our Priority"
                theme_text_color: "Secondary"
                halign: "center"
                font_style: "H6"
                size_hint_y: 0.1

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.55
            spacing: dp(25)
            padding: dp(20)

            MDCard:
                orientation: 'vertical'
                size_hint: None, None
                size: dp(400), dp(200)
                pos_hint: {"center_x": 0.5}
                elevation: 12
                padding: dp(30)
                spacing: dp(20)
                md_bg_color: 1, 1, 1, 1
                ripple_behavior: True

                MDIcon:
                    icon: "account-heart"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    font_size: "48sp"
                    halign: "center"
                    size_hint_y: None
                    height: dp(60)

                MDLabel:
                    text: "Patient Portal"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.3, 0.6, 1
                    font_style: "H4"
                    bold: True
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Book appointments, view medical records, and manage your health"
                    theme_text_color: "Secondary"
                    halign: "center"
                    font_style: "Body1"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "Enter Patient Portal"
                    md_bg_color: 0.1, 0.5, 0.8, 1
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(45)
                    font_style: "Button"
                    bold: True
                    elevation: 6
                    pos_hint: {"center_x": 0.5}
                    on_release: root.manager.current = 'patient_login'

            MDCard:
                orientation: 'vertical'
                size_hint: None, None
                size: dp(400), dp(200)
                pos_hint: {"center_x": 0.5}
                elevation: 12
                padding: dp(30)
                spacing: dp(20)
                md_bg_color: 1, 1, 1, 1
                ripple_behavior: True

                MDIcon:
                    icon: "doctor"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    font_size: "48sp"
                    halign: "center"
                    size_hint_y: None
                    height: dp(60)

                MDLabel:
                    text: "Doctor Portal"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.3, 0.6, 1
                    font_style: "H4"
                    bold: True
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Manage appointments, review patient records, and provide care"
                    theme_text_color: "Secondary"
                    halign: "center"
                    font_style: "Body1"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "Enter Doctor Portal"
                    md_bg_color: 0.1, 0.5, 0.8, 1
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    size_hint_y: None
                    height: dp(45)
                    font_style: "Button"
                    bold: True
                    elevation: 6
                    pos_hint: {"center_x": 0.5}
                    on_release: root.manager.current = 'doctor_login'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            spacing: dp(10)

            MDLabel:
                text: "VitaCare Medical Systems"
                theme_text_color: "Secondary"
                font_style: "Caption"
                halign: "center"

            MDLabel:
                text: "24/7 Healthcare Access • Professional Medical Team • Advanced Technology"
                theme_text_color: "Secondary"
                font_style: "Overline"
                halign: "center"

            MDLabel:
                text: "© 2024 VitaCare. All rights reserved."
                theme_text_color: "Secondary"
                font_style: "Caption"
                halign: "center"