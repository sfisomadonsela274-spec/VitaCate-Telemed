<ResetPasswordScreen>:
    name: "reset_password"
    
    # Background Image
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        # Header Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.3
            spacing: dp(10)
            padding: dp(10)

            # Reset Password Icon and Title
            FloatLayout:
                size_hint_y: 0.6
                
                MDIconButton:
                    icon: "arrow-left"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    pos_hint: {"x": 0, "center_y": 0.5}
                    on_release: root.on_back_press()

                MDIcon:
                    icon: "lock-open"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    font_size: "64sp"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Reset Password"
                theme_text_color: "Custom"
                text_color: 0.1, 0.3, 0.6, 1
                font_style: "H4"
                bold: True
                halign: "center"
                size_hint_y: 0.3

            MDLabel:
                text: "Create your new secure password"
                theme_text_color: "Secondary"
                halign: "center"
                font_style: "Body1"
                size_hint_y: 0.2

        # Reset Card
        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(350), dp(350)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 8
            padding: dp(25)
            spacing: dp(20)
            md_bg_color: 1, 1, 1, 1

            MDLabel:
                text: "Enter New Password"
                theme_text_color: "Custom"
                text_color: 0.1, 0.3, 0.6, 1
                font_style: "H5"
                bold: True
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            # New Password Field
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(56)
                spacing: dp(10)

                MDIcon:
                    icon: "lock"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    size_hint_x: 0.2

                MDTextField:
                    id: new_password
                    hint_text: "New Password"
                    mode: "rectangle"
                    size_hint_x: 0.8
                    icon_left: ""
                    text_color: 0.1, 0.1, 0.1, 1
                    line_color_focus: 0.1, 0.5, 0.8, 1
                    password: True

            # Confirm Password Field
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(56)
                spacing: dp(10)

                MDIcon:
                    icon: "lock-check"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.5, 0.8, 1
                    size_hint_x: 0.2

                MDTextField:
                    id: confirm_password
                    hint_text: "Confirm New Password"
                    mode: "rectangle"
                    size_hint_x: 0.8
                    icon_left: ""
                    text_color: 0.1, 0.1, 0.1, 1
                    line_color_focus: 0.1, 0.5, 0.8, 1
                    password: True

            # Save Password Button
            MDRaisedButton:
                text: "Save New Password"
                md_bg_color: 0.1, 0.5, 0.8, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(50)
                font_style: "Button"
                bold: True
                elevation: 4
                on_release: root.reset_password()

        # Footer
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.15
            spacing: dp(5)

            MDLabel:
                text: "VitaCare Medical Systems"
                theme_text_color: "Secondary"
                font_style: "Caption"
                halign: "center"

            MDLabel:
                text: "Secure • Reliable • Caring"
                theme_text_color: "Secondary"
                font_style: "Overline"
                halign: "center"